.container.mt-3
  %h1 Listing likes

  %table#likeTable
    %thead
      %tr
        %th User
        %th Post
        %th
        %th
        %th

    %tbody
      - @likes.each do |like|
        %tr
          %td= like.user.name
          %td= like.post.msg
          %td= link_to 'Show', like
          %td= link_to 'Edit', edit_like_path(like)
          %td= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Like', new_like_path

:javascript
  $(document).ready( function () {
    $('#likeTable').DataTable();
  } );
